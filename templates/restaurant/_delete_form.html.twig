<form method="post" action="{{ path('app_restaurant_delete', {'id': restaurant.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    {# se sei Admin, puoi disattivare un Resto#}
    {% for role in app.user.getRoles() %}
    {% if (role == 'ROLE_ADMIN') %}
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ restaurant.id) }}">
    <button class="btn">Delete</button>
    {% endif %}    
    {% endfor %} 

    {# se sei l'User loggato ora (last-loggato), puoi disattivare il tuo Resto#}
    {% if (app.user.id == restaurant.User.id) %}
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ restaurant.id) }}">
    <button class="btn">Delete</button>
    {% endif %}


</form>
