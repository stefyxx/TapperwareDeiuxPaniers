{% extends 'base.html.twig' %}

{% block title %}Hello CartController!
{% endblock %}

{% block body %}
	<div class="bg-light p-3">
		<h1>Votre panier</h1>
	</div>
	{#{% if items.length >0 %}#}
	<table class="table">
		<thead>
			<tr>
				<th>Prodotto</th>
				<th>prezzo</th>
				<th>quantità</th>
				<th>Totale</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for prodotto in items %}
				<tr>
					<td>{{ prodotto.product.NomProduit }}</td>
					<td>{{ prodotto.product.PrixLocationUnitaire }} €</td>
					<td>{{ prodotto.quantity }}</td>
					<td>{{  prodotto.product.PrixLocationUnitaire * prodotto.quantity }}
					</td>
					<td>
						<a href="{{ path('produit_remove', {'id': prodotto.product.id})}}">
							<i class="fas fa-trash"></i>cancella 10 articoli</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>

		<tfoot>
			<tr>
				<td>Totale:</td>
				<td>{{ totale }} €</td>
				<td></td>
			</tr>
		</tfoot>

	</table>

{#{% else %}
	<p>Surprise, c'est vide !</p>
{% endif %}#}

{% endblock %}
